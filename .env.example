# Database Configuration
DATABASE_URL=sqlite:///./grabby.db
# DATABASE_URL=postgresql://user:password@localhost:5432/grabby

# Redis Configuration
REDIS_URL=redis://localhost:6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your-secret-key-here

# Download Configuration
DOWNLOAD_DIR=./downloads
MAX_CONCURRENT_DOWNLOADS=3
MAX_QUEUE_SIZE=100

# Engine Configuration
DEFAULT_ENGINE=yt-dlp
ENABLE_MULTI_ENGINE=true

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/grabby.log

# Development
DEBUG=false
ENVIRONMENT=production

# External Services (Optional)
ARIA2_RPC_URL=http://localhost:6800/jsonrpc
STREAMLINK_PATH=/usr/bin/streamlink
GALLERY_DL_PATH=/usr/bin/gallery-dl

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65
