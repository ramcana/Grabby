# Environment Configuration Template
# Copy this file to .env and configure for your environment

# ðŸ”’ SECURITY NOTICE:
# - Never commit .env files with real credentials to version control  
# - Use different configurations for development, staging, and production
# - Generate secure random values for production secrets
# - Use secure secret management systems for production deployments

# Database Configuration
DATABASE_URL=sqlite:///./grabby.db
# For PostgreSQL: postgresql://username:password@localhost:5432/grabby

# Redis Configuration (Optional - for queue management and caching)
REDIS_URL=redis://localhost:6379

# API Configuration  
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=generate-secure-random-key-for-production

# Download Configuration
DOWNLOAD_DIR=./downloads
MAX_CONCURRENT_DOWNLOADS=3
MAX_QUEUE_SIZE=100

# Engine Configuration
DEFAULT_ENGINE=yt-dlp
ENABLE_MULTI_ENGINE=true

# Notification Settings
ENABLE_NOTIFICATIONS=true
NOTIFICATION_WEBHOOK_URL=

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/grabby.log

# Development Settings
DEBUG=false
ENVIRONMENT=development

# External Services (Optional)
ARIA2_RPC_URL=http://localhost:6800/jsonrpc
STREAMLINK_PATH=/usr/bin/streamlink
GALLERY_DL_PATH=/usr/bin/gallery-dl

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance
WORKER_PROCESSES=1
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

